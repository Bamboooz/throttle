{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "throttle",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
           
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.throttle.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "resizable": false,
                "decorations": false,
                "title": "throttle",
                "width": 200,
                "height": 200
            }
        ]
    }
}
